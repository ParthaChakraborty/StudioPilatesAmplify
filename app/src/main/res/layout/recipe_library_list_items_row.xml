<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/rlForRecipeList"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/tvRecipeTimingTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:padding="10dp"
            android:paddingEnd="0dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:fontFamily="@font/aileron_regular_webfont"/>

        <ImageView
            android:id="@+id/imageForRecipeItem"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:layout_below="@id/tvRecipeTimingTitle" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:scaleType="fitXY"
            android:src="@drawable/topic_bg" />

        <TextView
            android:id="@+id/tvRecipeInformation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:padding="5dp"
            android:paddingEnd="0dp"
            android:paddingStart="@dimen/layout_padding"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:fontFamily="@font/aileron_regular_webfont"/>
    </RelativeLayout>


</RelativeLayout>