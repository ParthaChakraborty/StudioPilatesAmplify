<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rlForFAQTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvFAQContentTitle"
            android:layout_width="match_parent"
            android:padding="15dp"
            android:textAlignment="textStart"
            android:layout_marginStart="@dimen/layout_padding"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:fontFamily="@font/aileron_regular_webfont" />


    </RelativeLayout>

    <View
        android:id="@+id/viewAfterRl"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/rlForFAQTitle"
        android:layout_marginStart="@dimen/edit_profile_view_padding"
        android:layout_marginEnd="@dimen/edit_profile_view_padding"
        android:background="@color/colorRegistrationPopup" />


</RelativeLayout>