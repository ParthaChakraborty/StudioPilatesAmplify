<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rlForViews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/imageForWorkout"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/layout_padding"
            android:adjustViewBounds="true" />

        <RelativeLayout
            android:id="@+id/rlForText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@id/imageForWorkout">

            <TextView
                android:id="@+id/tvForTitle"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/layout_padding"
                android:layout_marginStart="@dimen/layout_padding"
                android:maxLines="4"
                android:textSize="15sp"
                android:fontFamily="@font/aileron_regular_webfont"/>


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/layout_padding"
                android:layout_marginStart="5dp"
                android:src="@drawable/right_arrow" />
        </RelativeLayout>

    </RelativeLayout>

    <!-- <View
         android:layout_width="match_parent"
         android:layout_height="1dp"
         android:layout_below="@+id/rlForViews"
         android:background="@color/colorRegistrationPopup" />-->
</RelativeLayout>