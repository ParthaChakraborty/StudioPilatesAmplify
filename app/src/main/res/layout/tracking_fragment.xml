                            android:layout_height="wrap_content"
                            android:paddingEnd="20dp"
                            android:layout_marginTop="8dp"
                            android:paddingStart="20dp">

                            <ImageView
                                android:id="@+id/ivSmileContent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:src="@drawable/smi_cont" />

                            <TextView
                                android:id="@+id/textViewSmileContent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/ivSmileContent"
                                android:layout_marginTop="15dp"
                                android:layout_centerHorizontal="true"
                                android:text="@string/content_text"
                                android:fontFamily="@font/aileron_regular_webfont"
                                android:textColor="@color/black"
                                android:textSize="@dimen/smiley_text_width" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rlSmileDiscouraged"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:paddingEnd="12dp"
                            android:layout_marginTop="8dp"
                            android:paddingStart="12dp">

                            <ImageView
                                android:id="@+id/ivSmileDiscouraged"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:src="@drawable/smi_disc" />

                            <TextView
                                android:id="@+id/textViewSmileDiscouraged"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/ivSmileDiscouraged"
                                android:layout_marginTop="15dp"
                                android:text="@string/discouraged_text"
                                android:layout_centerHorizontal="true"
                                android:fontFamily="@font/aileron_regular_webfont"
                                android:textColor="@color/black"
                                android:textSize="@dimen/smiley_text_width" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rlSmileFrustrated"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:paddingEnd="15dp"
                            android:layout_marginTop="8dp"
                            android:paddingStart="15dp">


                            <ImageView
                                android:id="@+id/ivSmileFrustrated"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:src="@drawable/smi_frust" />

                            <TextView
                                android:id="@+id/textViewSmileFrustrated"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/ivSmileFrustrated"
                                android:layout_marginTop="15dp"
                                android:layout_centerHorizontal="true"
                                android:text="@string/frustrated_text"
                                android:fontFamily="@font/aileron_regular_webfont"
                                android:textColor="@color/black"
                                android:textSize="@dimen/smiley_text_width" />
                        </RelativeLayout>

                    </LinearLayout>


                    <!--********rootLayoutForGoalSetting********* -->
                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:id="@+id/rootLayoutForGoalSetting"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorRegistrationPopup"
                        android:orientation="vertical"
                        android:layout_below="@+id/rootRlForEmojiFeedback">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/llClickOfStartWeight"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="30"
                                android:background="@color/white"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:src="@drawable/startbox" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    android:padding="8dp">

                                    <TextView
                                        android:id="@+id/textViewValueOfStartWeight"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5dp"
                                        android:fontFamily="@font/aileron_regular_webfont"
                                        android:textColor="@color/black"
                                        android:textSize="16sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/textViewStartWeight"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/aileron_regular_webfont"
                                        android:hint="Start Weight"
                                        android:textColor="@color/black"
                                        android:textSize="12sp" />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/llClickOfCurrentWeight"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="1dp"
                                android:layout_marginStart="1dp"
                                android:layout_weight="30"
                                android:background="@color/white"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:src="@drawable/currentlbox" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    android:padding="8dp">

                                    <TextView
                                        android:id="@+id/textViewValueOfCurrentWeight"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5dp"
                                        android:fontFamily="@font/aileron_regular_webfont"
                                        android:textColor="@color/black"
                                        android:textSize="16sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/textViewCurrentWeight"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/aileron_regular_webfont"
                                        android:hint="Current Weight"
                                        android:textColor="@color/black"
                                        android:textSize="12sp" />
                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/llClickOfGoalWeight"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="30"
                                android:background="@color/white"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:src="@drawable/goalbox" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    android:padding="8dp">

                                    <TextView
                                        android:id="@+id/textViewValueOfGoalWeight"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5dp"
                                        android:fontFamily="@font/aileron_regular_webfont"
                                        android:textColor="@color/black"
                                        android:textSize="16sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/textViewGoalWeight"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/aileron_regular_webfont"
                                        android:hint="Goal Weight"
                                        android:textColor="@color/black"
                                        android:textSize="12sp" />
                                </LinearLayout>

                            </LinearLayout>


                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/llClickOfStartBodyFat"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="1dp"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:layout_weight="30"
                                android:background="@color/white"
                                android:paddingBottom="20dp"
                                android:paddingEnd="10dp"
                                android:paddingStart="10dp"
                                android:paddingTop="20dp">

                                <TextView
                                    android:id="@+id/textViewValueOfStartBodyFat"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/textViewStartBodyFat"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/aileron_regular_webfont"
                                    android:hint="Start Body Fat"
                                    android:textColor="@color/black"
                                    android:textSize="12sp" />
                            </LinearLayout>


                            <LinearLayout
                                android:id="@+id/llClickOfCurrentBodyFat"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="1dp"
                                android:layout_marginStart="1dp"
                                android:layout_marginTop="1dp"
                                android:layout_weight="30"
                                android:background="@color/white"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:paddingBottom="20dp"
                                android:paddingEnd="10dp"
                                android:paddingStart="10dp"
                                android:paddingTop="20dp">


                                <TextView
                                    android:id="@+id/textViewValueOfCurrentBodyFat"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/textViewCurrentBodyFat"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
