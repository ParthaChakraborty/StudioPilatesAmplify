                                android:src="@drawable/smi_thril" />

                            <TextView
                                android:id="@+id/textViewSmileThrill"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/ivSmileThrill"
                                android:layout_marginTop="15dp"
                                android:layout_centerHorizontal="true"
                                android:text="@string/thrilled_text"
                                android:fontFamily="@font/aileron_regular_webfont"
                                android:textColor="@color/black"
                                android:textSize="@dimen/smiley_text_width" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rlSmileContent"
                            android:layout_width="0dp"
