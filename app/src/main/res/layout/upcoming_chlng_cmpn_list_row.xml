<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="5dp"
    android:layout_margin="10dp"
    android:layout_height="wrap_content"
    android:id="@+id/cardView">
    

    <RelativeLayout
        android:id="@+id/rlChlng_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/tvChlng_cmpn_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:padding="10dp"
            android:gravity="center"
            android:paddingEnd="0dp"
            android:paddingStart="@dimen/layout_padding"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="@font/aileron_regular_webfont"/>

            <TextView
                android:id="@+id/tvFromDateValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/aileron_regular_webfont"
                android:textColor="@color/black"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/tvChlng_cmpn_title"/>

            <TextView
                android:id="@+id/tvToDateValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvFromDateValue"
                android:fontFamily="@font/aileron_regular_webfont"
                android:textColor="@color/black"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"/>

